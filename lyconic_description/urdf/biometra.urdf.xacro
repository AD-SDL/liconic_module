<?xml version="1.0"?>
<robot name="lyconic" xmlns:xacro="http://www.ros.org/wiki/xacro">


  <!-- Links -->
  <xacro:macro name="lyconic" params = "prefix">
  <link name="${prefix}lyconic_base">
    <visual>
      <origin xyz="0 0.5 1.042" rpy="1.5708 0 0"/>
      <geometry>
        <mesh filename="package://lyconic_description/meshes/lyconic_base.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="light_grey"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://lyconic_description/meshes/lyconic_base.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin xyz="0 0.5 1.042" rpy="1.5708 0 0"/>
    </collision>
  </link>

  <link name="${prefix}lyconic_cap">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://lyconic_description/meshes/lyconic_cap.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://lyconic_description/meshes/lyconic_cap.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>

  <link name="${prefix}lyconic_base2">
    <visual>
      <origin xyz="0 0.5 1.042" rpy="1.5708 0 0"/>
      <geometry>
        <mesh filename="package://lyconic_description/meshes/lyconic_base.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="light_grey"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://lyconic_description/meshes/lyconic_base.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin xyz="0 0.5 1.042" rpy="1.5708 0 0"/>
    </collision>
  </link>

  <link name="${prefix}lyconic_cap2">
    <visual>
      <origin xyz="0 0 0" rpy="0 0 0"/>
      <geometry>
        <mesh filename="package://lyconic_description/meshes/lyconic_cap.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <material name="red"/>
    </visual>
    <collision>
      <geometry>
        <mesh filename="package://lyconic_description/meshes/lyconic_cap.STL" scale="0.001 0.001 0.001"/>
      </geometry>
      <origin xyz="0 0 0" rpy="0 0 0"/>
    </collision>
  </link>


  <!-- Joints -->

  <joint name="lyconic_Cap" type="revolute">
    <parent link="${prefix}lyconic_base"/>
    <child link="${prefix}lyconic_cap"/>
    <axis xyz="-1 0 0"/>
    <origin xyz="0 0.466 1.05" rpy="1.5708 0 0"/>
    <limit effort="1000.0" lower="0.0" upper="1.2" velocity="0.5"/>
  </joint>

  <joint name="lyconic_Cap2" type="revolute">
    <parent link="${prefix}lyconic_base2"/>
    <child link="${prefix}lyconic_cap2"/>
    <axis xyz="-1 0 0"/>
    <origin xyz="0 0.466 1.05" rpy="1.5708 0 0"/>
    <limit effort="1000.0" lower="0.0" upper="1.2" velocity="0.5"/>
  </joint>

  </xacro:macro>

</robot>
